<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amrdeveloper.fastmind">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".SinglePlayActivity"
            android:label="@string/single_game" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/about" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings" />
        <activity android:name=".MultiPlayActivity" />
        <activity android:name=".RankActivity" />
        <activity android:name=".SigninActivity" />
        <activity android:name=".ChallengeActivity"></activity>
    </application>

</manifest>