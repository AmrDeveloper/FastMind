<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:orientation="vertical">

        <TextView
            android:id="@+id/usernameInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="20sp"
            tools:text="Username : AmrDeveloper" />

        <TextView
            android:id="@+id/levelInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="20sp"
            tools:text="Level : 99" />

        <TextView
            android:id="@+id/scoreInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="20sp"
            tools:text="Score : 20.000.000 $" />

        <Button
            android:id="@+id/continueOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/continues"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/startOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/start_new_game"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/challengeOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/challenge"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/settingsOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/settings"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/aboutOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/about"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>
